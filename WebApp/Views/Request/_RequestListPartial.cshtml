@model WebApp.Models.RequestListViewModel 

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Mesaj</th>
            <th>Oluşturulma Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requests)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.StartedDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <button class="btn btn-sm btn-success edit-request" data-id="@item.ID">Düzenle</button>
                    <button class="btn btn-sm btn-danger delete-request" data-id="@item.ID">Sil</button>
                    <button class="btn btn-sm btn-primary" onclick="openAddActionModal(@item.ID)">+ Aksiyon Ekle</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Sayfalama -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="javascript:void(0);" onclick="loadPage(@i)">@i</a>
            </li>
        }
    </ul>
</nav>
