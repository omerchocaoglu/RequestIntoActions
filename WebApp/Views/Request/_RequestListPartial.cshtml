@model WebApp.Models.RequestListViewModel 

<table class="table table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Oluşturulma Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Requests)
        {
            <tr id="row-@item.ID">
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.StartedDate.ToString("dd.MM.yyyy")</td>
                <td>
                    <button title="Düzenle" class="btn btn-sm btn-success edit-request" data-id="@item.ID">
                        <i class="bi bi-pen"></i>
                    </button>
                    <button title="Sil" class="btn btn-sm btn-danger delete-request" data-id="@item.ID">
                        <i class="bi bi-trash"></i>
                    </button>
                    <button title="Aksiyon ekle" class="btn btn-sm btn-primary" onclick="openAddActionModal(@item.ID)">
                        <i class="bi bi-pencil-square"></i>
                    </button>
                    <button title="Aksiyonları gör" class="btn btn-info btn-sm" onclick="showActionsModal(@item.ID)">
                        <i class="bi bi-eye"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Sayfalama -->
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" href="javascript:void(0);" onclick="loadPage(@i)">@i</a>
            </li>
        }
    </ul>
</nav>
<script>
    $("#row-" + id).remove(); // Silinen satırı DOM’dan kaldırır
</script>





